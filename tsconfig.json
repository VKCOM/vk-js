{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es2015", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": false,
    "baseUrl": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "readme": "README.md",
    "plugin": ["typedoc-plugin-versions", "typedoc-plugin-mdn-links"],
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
